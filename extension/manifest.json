{
  "manifest_version": 3,
  "name": "Truffle Dog Digital CRM",
  "description": "Mostly automation for cut/paste in CRM tasks.",
  "version": "3.0",
  "permissions": ["activeTab", "tabs", "storage"],
  "host_permissions": [
    "*://api.lemlist.com/*",
    "*://dashboard.lusha.com/*",
    "*://www.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://dashboard.lusha.com/prospecting/contacts*"],
      "js": [
        "helpers-dom.js",
        "helpers-localStorage.js",
        "drawer.js",
        "lusha-contacts.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["*://www.linkedin.com/mynetwork/invitation-manager/sent*"],
      "js": [
        "helpers-dom.js",
        "helpers-localStorage.js",
        "drawer.js",
        "linkedin-withdraw.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["*://www.linkedin.com/mynetwork/invite-connect/connections*"],
      "js": [
        "helpers-dom.js",
        "helpers-localStorage.js",
        "drawer.js",
        "linkedin-update-connected.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["drawer.html", "drawer.css", "lusha-contacts.html"],
      "matches": ["*://dashboard.lusha.com/*"]
    },
    {
      "resources": ["drawer.html", "drawer.css", "linkedin.html"],
      "matches": ["*://www.linkedin.com/*"]
    }
  ],
  "icons": {
    "16": "crm-16.png",
    "32": "crm-32.png",
    "48": "crm-48.png",
    "128": "crm-128.png"
  }
}
