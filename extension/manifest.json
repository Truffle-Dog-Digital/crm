{
  "manifest_version": 3,
  "name": "Truffle Dog Digital CRM",
  "description": "Mostly automation for cut/paste in CRM tasks.",
  "version": "3.0",
  "permissions": ["activeTab", "tabs", "storage"],
  "host_permissions": ["*://api.lemlist.com/*", "*://dashboard.lusha.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://dashboard.lusha.com/prospecting/contacts*"],
      "js": ["helpers.js", "drawer.js", "lusha-contacts.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "drawer.html",
        "drawer.css",
        "lusha-contacts.html",
        "lusha-contacts.css"
      ],
      "matches": ["*://dashboard.lusha.com/*"]
    }
  ],
  "icons": {
    "16": "crm-16.png",
    "32": "crm-32.png",
    "48": "crm-48.png",
    "128": "crm-128.png"
  }
}
